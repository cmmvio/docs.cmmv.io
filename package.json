{
	"name": "cmmv-docs",
	"version": "0.4.0",
	"main": "dist/index.js",
	"scripts": {
		"build": "cmmv build",
		"dev": "cmmv dev",
		"start": "cmmv start",
		"generate": "cmmv run ./src/generate.ts",
		"lint": "cmmv lint",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cmmvio/docs.cmmv.io.git"
	},
	"keywords": [
		"cmmv",
		"docs",
		"documentation"
	],
	"author": "Andre Ferreira",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cmmvio/docs.cmmv.io/issues"
	},
	"homepage": "https://github.com/cmmvio/docs.cmmv.io#readme",
	"description": "",
	"lint-staged": {
		"**/*.ts": [
			"prettier --ignore-path ./.prettierignore --write"
		]
	},
	"dev": {
		"watch": [
			"src",
			"docs"
		],
		"ignore": [
			"**/*.spec.ts",
			"src/app.module.ts",
			"docs/en/**/*.html",
            "docs/ptbr/**/*.html",
			"docs/*/*.html"
		],
        "beforeStart": "cmmv run ./src/generate.ts"
	},
	"dependencies": {
		"@cmmv/core": "^0.8.18",
		"@cmmv/http": "^0.8.18",
		"@cmmv/view": "^0.8.18",
		"dotenv": "^16.4.7",
		"fast-glob": "^3.3.3",
		"glob": "^11.0.1",
		"highlight.js": "^11.11.1",
		"highlightjs-copy": "^1.0.6",
		"markdown-it": "^14.1.0",
		"reflect-metadata": "^0.2.2",
		"vue": "^3.5.13"
	},
	"devDependencies": {
		"@cmmv/cli": "^0.6.2",
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-angular": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@types/chai": "^4.3.20",
		"@types/jest": "^29.5.14",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"typescript": "^5.7.3"
	}
}
